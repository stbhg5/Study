	</definition>

	<definition name="bbs.createdLayout" extends="mainLayout">
		<put-attribute name="body" value="/board/created.jsp"/>
	</definition>

	<definition name="bbs.articleLayout" extends="mainLayout">
		<put-attribute name="body" value="/board/article.jsp"/>
	</definition>

